{
  "compilerOptions": {
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "checkJs": false,
    "lib": ["ES2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "."
  },
  "include": [
    "typings",
    "__tests__",
    "jest",
    "src",
    "./index.js",
    "storybook",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
